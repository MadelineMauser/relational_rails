<h1>Update Coop</h1>
<%= form_with url:"/coops/#{@coop.id}", method: :patch, local: true do |f| %>
  <%=f.label :name, 'Coop name:'%>
  <%=f.text_field :name, value: @coop.name%>
  <p>Coop is portable?:</p>
  <p><%=f.label :is_portable_true, 'Yes'%>
  <%=f.radio_button :is_portable, 'true', checked: (@coop.is_portable == true)%>
  <%=f.label :is_portable_false, 'No'%>
  <%=f.radio_button :is_portable, 'false', checked: (@coop.is_portable == false)%></p>
  <p><%=f.label :nest_box_num, 'Number of nest boxes:'%>
  <%=f.number_field :nest_box_num, value: @coop.nest_box_num%></p>
  <p><%=f.submit 'Update Coop'%></p>
<%end%>